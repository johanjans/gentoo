{
	/*------------
	    layout
	------------*/

	"modules-left": [
		"custom/power",
		"hyprland/workspaces",
		"hyprland/window"
	],
	"modules-center": [],
	"modules-right": [
		"custom/mpris",
		"custom/claude",
		"custom/uxplay",
		"custom/display-mode",
		"custom/presentation-mode",
		"bluetooth",
		"custom/network",
		"pulseaudio",
		"custom/battery",
		"tray",
		"clock"
	],

	/*-------------
	    options
	-------------*/

	"layer": "top",
	"height": 0,
	"width": 0,
	"margin": 0,
	"spacing": 0,
	"mode": "dock",
	"reload_style_on_change": true,

	/*-------------
	    modules
	-------------*/

	"custom/power": {
		"exec": "~/.config/waybar/scripts/power-updates.sh",
		"return-type": "json",
		"interval": 300,
		"signal": 1,
		"on-click": "kitty --class floating-power -e ~/.config/waybar/scripts/power-menu.sh",
		"on-click-middle": "xdg-open https://www.gentoo.org/news/",
		"on-click-right": "kitty --hold -e ~/.config/waybar/scripts/gentoo-update.sh"
	},

	"hyprland/workspaces": {
		"format": "{name}",
		"show-special": true,
		"on-scroll-up": "hyprctl dispatch workspace +1",
		"on-scroll-down": "hyprctl dispatch workspace -1",
		"cursor": true
	},

	"hyprland/window": {
		"format": "{}",
		"rewrite": {
			"": "Desktop",
			"kitty": "Terminal",
			"zsh": "Terminal",
			"~": "Terminal"
		},
		"swap-icon-label": false
	},


	"custom/presentation-mode": {
		"exec": "~/.config/waybar/scripts/presentation-mode.sh",
		"return-type": "json",
		"interval": 2,
		"on-click": "~/.config/waybar/scripts/presentation-mode.sh toggle",
		"signal": 2
	},

	"custom/claude": {
		"exec": "~/.config/waybar/scripts/claude.sh",
		"return-type": "json",
		"interval": 60,
		"on-click": "~/.config/waybar/scripts/claude.sh launch",
		"on-click-right": "google-chrome-stable --new-window https://claude.ai/settings/billing"
	},

	"custom/uxplay": {
		"exec": "~/.config/waybar/scripts/uxplay.sh",
		"return-type": "json",
		"interval": 2,
		"on-click": "~/.config/waybar/scripts/uxplay.sh toggle",
		"on-click-right": "~/.config/waybar/scripts/uxplay.sh edit",
		"signal": 5
	},

	"custom/display-mode": {
		"exec": "~/.config/waybar/scripts/wl-mirror-display.sh",
		"return-type": "json",
		"interval": 2,
		"on-click": "~/.config/waybar/scripts/wl-mirror-display.sh toggle",
		"on-click-right": "kitty --class floating -e ~/.config/waybar/scripts/monitor-profile.sh",
		"signal": 3
	},

	"clock": {
		"format": "{:%H:%M}",
		"tooltip": true,
