		"locale": "sv_SE.utf8"
	},

	"pulseaudio": {
		"format": "{icon} {volume}%",
		"format-muted": "ó°Ÿ muted",
		"format-icons": {
			"default": ["ó°•¿", "ó°–€", "ó°•¾"],
			"headphone": "ó°‹‹",
			"headset": "ó°‹"
		},
		"tooltip-format": "Audio Devices\n\nğŸ§ Output: {desc}\nğŸ¤ Input: {source_desc}\n\nğŸ–±ï¸ LMB: Toggle mute\nğŸ–±ï¸ RMB: Volume mixer",
		"on-click": "wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle",
		"on-click-right": "pavucontrol"
	},

	"custom/network": {
		"exec": "~/.config/waybar/scripts/network-status.sh",
		"return-type": "json",
		"interval": 10,
		"on-click": "kitty --class floating-network -e ~/.config/waybar/scripts/network.sh"
	},

	"bluetooth": {
		"format-off": "ó°‚²",
		"format-on": "ó°‚¯",
		"format-connected": "ó°‚± {num_connections}",
		"tooltip-format-on": "ğŸ”µ Bluetooth: ON\n\nNo devices connected\n\nğŸ–±ï¸ LMB: Scan and connect\nğŸ–±ï¸ RMB: Manage paired devices",
		"tooltip-format-connected": "ğŸ”µ Bluetooth: ON\n\n{num_connections} device(s) connected:\n{device_enumerate}\n\nğŸ–±ï¸ LMB: Scan and connect\nğŸ–±ï¸ RMB: Manage paired devices",
		"tooltip-format-enumerate-connected": "ğŸ§ {device_alias}",
		"on-click": "kitty --class floating-bluetooth -e ~/.config/waybar/scripts/bluetooth.sh",
		"on-click-right": "kitty --class floating-bluetooth -e ~/.config/waybar/scripts/bluetooth.sh disconnect"
	},

	"custom/mpris": {
		"exec": "~/.config/waybar/scripts/mpris.sh",
		"return-type": "json",
		"interval": 2,
		"on-click": "~/.config/waybar/scripts/mpris.sh click",
		"on-scroll-up": "playerctl next",
		"on-scroll-down": "playerctl previous"
	},

	"custom/battery": {
		"exec": "~/.config/waybar/scripts/battery.sh",
		"return-type": "json",
		"interval": 5,
		"on-click": "kitty -e btop"
	},

	"tray": {
		"icon-size": 16,
		"spacing": 8
	}
}
