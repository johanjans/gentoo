#!/bin/bash
# Kill any existing portal processes
killall -e xdg-desktop-portal-hyprland 2>/dev/null
killall -e xdg-desktop-portal 2>/dev/null

# Start Hyprland portal backend
/usr/libexec/xdg-desktop-portal-hyprland &

# Brief wait for backend initialization
sleep 0.5

# Start main xdg-desktop-portal
/usr/libexec/xdg-desktop-portal &
